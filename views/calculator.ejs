<!DOCTYPE html>
<html>
<head>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular.min.js"></script>
    <script src="http://angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.12.1.js"></script>
    <link href="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" rel="stylesheet">
    <script type="text/javascript" src="Calci_javascript.js"></script>
    <meta charset="UTF-8">
    <title>Calculator </title>
    <!-- Loading the AngularJS file from /public/angularJS folder -->
    <script src="angularjs/calculator.js"></script>
</head>
<body ng-app="calculator" ng-controller="calculator">
<div class="page-header">
    <h1 class="text-center">Calculator!!!</h1>
</div>
<div class="container">
    <form name="dev">

        <div class="row" col-md-offset-2>
            <!--<div class="col-md-8">-->
            <div class="row">
                <div class="col-md-2 col-md-offset-2"></div>
                <div class="col-md-4">
                    <div class="input-group" >
                        <span class="input-group-addon" id="basic-addon1">Operand1</span>
                        <input type="number" class="form-control" placeholder="Enter Number" ng-model="number1">
                    </div>
                    <div class="input-group" >
                        <span class="input-group-addon" id="basic-addon1">Operand2</span>
                        <input type="number" class="form-control" placeholder="Enter Number" ng-model="number2">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <br> <div class="alert alert-danger" ng-hide="invalid_login">
                        <strong>Enter Valid Input</strong>
                    </div>

                </div>
            </div>

            <!--</div>-->
        </div>
        <br/><br/></br>

        <div class="row">
            <div class="col-md-1 col-md-offset-4"></div>


            <input type="submit" class="btn btn-success" ng-click="submit();"
                   value="Multi"/>
            <input type="submit" class="btn btn-success" ng-click="submit1();"
                   value="add"/>
            <input type="submit" class="btn btn-success" ng-click="submit2();"
                   value="sub"/>
            <input type="submit" class="btn btn-success" ng-click="submit3();"
                   value="divide"/>

            <br/><br/>
            <pre>
            <div class="page-header">
                <h2 class="text-center">Result is : {{data}}</h2>
            </div>
        </pre>
        </div>




</form>
</div>
</body>
</html>